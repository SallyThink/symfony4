<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}

        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    </head>
    <body>

        <header>
            {% if app.user %}
                <div class="row">
                    <div class="col-lg-2">
                        <a class="btn btn-default" href="{{ path('index') }}" role="button" style="width:100%; text-align: center;">
                            Home
                        </a>
                    </div>
                    <div class="col-lg-2 col-lg-push-6">
                        <a class="btn btn-default" href="{{ path('logout') }}" role="button" style="width:100%; text-align: center;">
                            Logout
                        </a>
                    </div>
                </div>
            {% endif %}
        </header>

        <div class="container" style="margin-top: 10%">
            {% block body %}{% endblock %}
            {% block javascripts %}{% endblock %}
        </div>

    </body>
</html>
